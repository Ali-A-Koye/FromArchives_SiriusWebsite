extends base2

block content
    .arty-breadcrumb
      .container
        .row
          .col-12
            nav(aria-label='breadcrumb')
    section.contact-area.mb-80
      .container
        .row.justify-content-center
          .col-12.col-md-7.col-lg-8
            .section-heading.style-2
              h4 Contact
              .line
            p
              Have New idea? Want to suggest somethin?have somethin in mind to tell us? don't like somethin? Cool, You can contact us right Away 
            .contact-form-area.mt-50
              form.fromsbt
                .form-group
                  label(name='name') Name*
                  input#name.form-control(type='text')
                .form-group
                  label(name='email') Email*
                  input#email.form-control(type='email')
                .form-group
                  label(name='message') Message*
                  textarea#message.form-control(name='message' cols='30' rows='10')
                button.btn.arty-btn.mt-30(type='submit') Send Now
          .col-12.col-md-5.col-lg-4
            .sidebar-area
              .single-widget.newsletter-widget.mb-50
                .section-heading.style-2.mb-30
                  h4 Newsletter
                  .line
                p
                  | Subscribe our newsletter to get notification about new Posts,new Updates... etc.
                .newsletter-form
                  form.subemail
                    input#subemail.form-control.mb-15(type='email' name='nl-email' placeholder='Enter your email')
                    button.btn.arty-btn.w-100(type='submit') Subscribe