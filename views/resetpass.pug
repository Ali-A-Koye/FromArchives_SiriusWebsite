extends base2

block content
  -if(!user)
      .arty-login-area.section-padding-80
        .container
          .row.justify-content-center
            .col-12.col-md-6
              .login-content
                .section-heading
                  h4 Want to Reset Password? We got this for you!
                  h6(style="font-size:12px;") Enter Your Account Email Address And We Send You Verification Email
                  .line
                form#resetpasswordform
                  .form-group
                    input#restpassemail.form-control(type='email' placeholder='Please Enter your email')
                  button#owiefjoeiwj.btn.arty-btn.w-100.mt-30(type='submit') Send Email
  -else
    h4.uihiuh=`Please LogOut in order to Reset Your Password ${user.name.split(' ')[0]}!`
    img#imgo.mx-auto.img-fluid.img-circle.d-block.sss2(src=`/img/bg-img/shoulder.png`)
